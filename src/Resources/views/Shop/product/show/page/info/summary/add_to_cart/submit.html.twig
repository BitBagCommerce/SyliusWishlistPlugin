{% import '@SyliusShop/shared/buttons.html.twig' as buttons %}
{% set form = hookable_metadata.context.form %}
{% set variant = form.cartItem.vars.value.variant %}
{% set enabled = form.vars.valid and variant is not null and variant.enabled %}

<div class="mb-3">
    {{ buttons.submit('sylius.ui.add_to_cart'|trans, 'add-to-cart-button', null, 'btn-primary', not enabled) }}

    <button
            id="{{ form.addToWishlist.vars.id }}"
            name="{{ form.addToWishlist.vars.full_name }}"
            class="btn btn-light"
            type="button"
            data-action="live#action:prevent"
            data-live-action-param="addToWishlist"
            data-bb-toggle="wishlist-variant"
            {{ sylius_test_html_attribute('wishlist-add-variant') }}
    >
        {{ form.addToWishlist.vars.label|trans }}
    </button>
</div>
