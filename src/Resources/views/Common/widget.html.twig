{% if wishlists|length < 2 %}

    {% set wishlistId = 0 %}
    {% set wishlistProductsCount = 0 %}

    {% for data in wishlists %}
        {% set wishlistId = data.id %}
        {% set wishlistProductsCount = data.wishlistProducts.count %}
    {% endfor %}

    <a href="{{ path('bitbag_sylius_wishlist_plugin_shop_locale_wishlist_list_products') }}" class="btn btn-icon btn-transparent px-0 position-relative" aria-label="wishlist button">
        {{ ux_icon('mdi:heart-outline') }}
        <span class="bitbag-wishlist-items-count" {{ sylius_test_html_attribute('wishlist-primary-items-count') }}>
            {{- wishlistProductsCount -}}
        </span>
    </a>
{% else %}
    <a data-bb-wishlist-enter href="{{ path('bitbag_sylius_wishlist_plugin_shop_locale_wishlist_list_wishlists') }}" class="btn btn-icon btn-transparent px-0 position-relative" aria-label="wishlist button">
        {{ ux_icon('material-symbols:list') }}
        <span class="bitbag-wishlist-items-count" {{ sylius_test_html_attribute('wishlists-count') }}>
            {{- wishlists|length -}}
        </span>
    </a>
{% endif %}
